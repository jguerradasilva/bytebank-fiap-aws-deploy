{
  "family": "bytebank-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::307987836348:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::307987836348:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "bytebank-frontend",
      "image": "307987836348.dkr.ecr.us-east-1.amazonaws.com/bytebank-repo:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/bytebank-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "VITE_BASE_URL",
          "value": ""
        },
        {
          "name": "VITE_EP_EXTRATO", 
          "value": "/api/extrato"
        },
        {
          "name": "VITE_API_AUTH",
          "value": "https://dummyjson.com/auth/login"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
